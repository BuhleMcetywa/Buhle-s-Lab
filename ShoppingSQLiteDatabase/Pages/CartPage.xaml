<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingSQLiteDatabase.Pages.CartPage"
            Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="10">
            <Label Text="My Cart" FontSize="Title" FontAttributes="Bold" HorizontalOptions="Center" Margin="10"/>

            <!-- ListView to display selected items -->
            <ListView x:Name="cartListView" Margin="0,10,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Image Source="{Binding ImagePath}" HeightRequest="50" WidthRequest="50" Aspect="AspectFill"/>
                                <StackLayout Margin="10,0,0,0">
                                    <Label Text="{Binding ItemName}" FontSize="Medium"/>
                                    <Label Text="{Binding Price}" FontSize="Small" TextColor="Gray"/>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>